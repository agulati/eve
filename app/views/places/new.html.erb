<h1>Add Place</h1>
<form action="/places" role="form" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="place[name]">Name</label>
    <input type="text" class="form-control" name="place[name]" value="<%=@place["name"]%>">
  </div>
  <div class="form-group">
    <input style="margin-right: 10px" class="pull-left" type="checkbox" class="form-control" name="place[nickspick]" value="<%=@place["nickspick"]%>">
    <label class="pull-left" for="place[nickspick]">Nick's Pick</label>
  </div>
  <div class="form-group" style="clear: both">
    <label for="place[address]">Address</label>
    <input type="text" class="form-control" name="place[address]" value="<%=@place["address"]%>">
  </div>
  <div class="form-group">
    <label for="place[phone]">Phone Number (numbers only)</label>
    <input type="text" pattern="[0-9]{10}" class="form-control" name="place[phone]" value="<%=@place["phone"]%>">
  </div>
  <div class="form-group">
    <label for="place[url]">Website URL</label>
    <input type="text" class="form-control" name="place[url]" value="<%=@place["url"]%>">
  </div>
  <div class="form-group">
    <label for="place[specials]">Specials</label>
    <textarea rows="5" class="form-control" name="place[specials]"><%= @place["specials"] %></textarea>
  </div>
  <div class="form-group">
    <label for="place[categories]">Categories</label>
    <input type="text" class="form-control" name="place[categories]" value="<%=@place["categories"]%>">
  </div>
  <div class="form-group">
    <label for="place[notes]">Notes</label>
    <textarea rows="5" class="form-control" name="place[notes]"><%= @place["notes"] %></textarea>
  </div>

  <div class="form-group">
    <ul class="edit-tags">
    <label for="place[tags]">Tags</label>
    <% @tags.each do |tag| %>
    <li><input type="checkbox" name="place[tags][]" value="<%=tag["value"]%>" <%= "checked" if select_tag(tag["value"]) %>><%=tag["display"]%></li>
    <% end %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
  <button type="cancel" class="btn btn-default">Cancel</button>
</form>
