<form action="/places/<%=@place["key"]%>" role="form" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="place[name]">Name</label>
    <input type="text" class="form-control" name="place[name]" value="<%=@place["name"]%>">
  </div>
  <div class="form-group">
    <label for="place[address]">Address</label>
    <input type="text" class="form-control" name="place[address]" value="<%=@place["address"]%>">
  </div>
  <div class="form-group">
    <label for="place[phone]">Phone Number (numbers only)</label>
    <input type="text" pattern="[0-9]{10}" class="form-control" name="place[phone]" value="<%=@place["phone"]%>">
  </div>
  <div class="form-group">
    <label for="place[url]">Website URL</label>
    <input type="text" class="form-control" name="place[url]" value="<%=@place["url"]%>">
  </div>
  <div class="form-group">
    <label for="place[specials]">Specials</label>
    <textarea rows="5" class="form-control" name="place[specials]"><%= @place["specials"] %></textarea>
  </div>
  <div class="form-group">
    <label for="place[notes]">Notes</label>
    <textarea rows="5" class="form-control" name="place[notes]"><%= @place["notes"] %></textarea>
  </div>

  <div class="form-group">
    <label for="place[tags]">Categories</label>
    <select multiple name="place[tags][]" class="form-control">
      <option>monday</option>
      <option>tuesday</option>
      <option>wednesday</option>
      <option>thursday</option>
      <option>fiday</option>
    </select>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
  <button type="cancel" class="btn btn-default">Cancel</button>
</form>
